                        <a href="#" class="editEmployeeLink"><img role="button" class="mini-icons" src="~/images/pencil.svg" /></a>
                    </td>
                    <td>
                        <!-- Switch para ativar/desativar funcionário -->
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked1" checked>
                            <label class="form-check-label" for="flexSwitchCheckChecked1"></label>
                        </div>
                    </td>
                </tr>
                <!-- Adicione mais linhas conforme necessário -->
                <tr>
                    <th scope="row">2</th>
                    <td>Bianca Uno</td>
                    <td>bianca@gmail.com</td>
                    <td>Dev</td>
                    <td>Usuário</td>
                    <td>
                        <a href="#" class="editEmployeeLink"><img role="button" class="mini-icons" src="~/images/pencil.svg" /></a>
                    </td>
                    <td>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked2" checked>
                            <label class="form-check-label" for="flexSwitchCheckChecked2"></label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>Isabella Mota</td>
                    <td>isabella@gmail.com</td>
                    <td>RH</td>
                    <td>Admin</td>
                    <td>
                        <a href="#" class="editEmployeeLink"><img role="button" class="mini-icons" src="~/images/pencil.svg" /></a>
                    </td>
                    <td>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked3" checked>
                            <label class="form-check-label" for="flexSwitchCheckChecked3"></label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>Gabriela Amaral</td>
                    <td>gabriela@gmail.com</td>
                    <td>Dev</td>
                    <td>Usuário</td>
                    <td>
                        <a href="#" class="editEmployeeLink"><img role="button" class="mini-icons" src="~/images/pencil.svg" /></a>
                    </td>
                    <td>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked2" checked>
                            <label class="form-check-label" for="flexSwitchCheckChecked2"></label>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Botão para adicionar novo funcionário -->
    <div class="btn-position">
        <button id="addEmployeeButton">Add Employee</button>
    </div>

    <!-- Modal de edição do funcionário -->
    <div class="modal fade" id="editEmployeeModal" tabindex="-1" aria-labelledby="editEmployeeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="work-sans-modal" id="editEmployeeModalLabel">Editing Employee</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Formulário de edição do funcionário -->
                    <div class="container form-container">
                        <div class="form-row">
                            <div class="form-column">
                                <label for="employeeName">Name:</label>
                                <input type="text" id="employeeName" class="form-control" placeholder="Enter name">
                            </div>
                            <div class="form-column">
                                <label for="employeeBirthdate">Birthdate:</label>
                                <input type="date" id="employeeBirthdate" class="form-control">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-column">
                                <label for="employeeEmail">Email:</label>
                                <input type="email" id="employeeEmail" class="form-control" placeholder="Enter email">
                            </div>
                            <div class="form-column">
                                <label for="employeePassword">Password:</label>
                                <input type="password" id="employeePassword" class="form-control" placeholder="Enter password">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-column">
                                <label for="employeeDepartment">Department:</label>
                                <select id="employeeDepartment" class="form-control">
                                    <option value="dev">Development</option>
                                    <option value="hr">Human Resources</option>
                                    <option value="sales">Sales</option>
                                </select>
                            </div>
                            <div class="form-column">
                                <label for="employeeType">Type:</label>
                                <select id="employeeType" class="form-control">
                                    <option value="user">User</option>
                                    <option value="admin">Administrator</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <!-- Botões do modal -->
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-secondary" id="saveChangesButton">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Script JavaScript para manipulação do modal -->
    <script>
        // Adiciona um manipulador de evento de clique aos ícones de lápis
        document.querySelectorAll('.editEmployeeLink').forEach(item => {
            item.addEventListener('click', function (event) {
                // Impedir o comportamento padrão do link
                event.preventDefault();

                // Obter o modal de edição do Employee pelo ID
                var modal = document.getElementById('editEmployeeModal');

                // Abrir o modal
                var modalInstance = new bootstrap.Modal(modal);
                modalInstance.show();
            });
        });

        // Adiciona um manipulador de evento de clique ao botão "Add Employee"
        document.getElementById('addEmployeeButton').addEventListener('click', function () {
            // Redirecionar para a página "create.cshtml"
            window.location.href = 'http://localhost:36224/Usuario/create';
        });

        // Adiciona um manipulador de evento de clique ao botão "Save changes" -
        // mapeando as informaçoes para requisição que será feita (pensando na api)
        document.getElementById('saveChangesButton').addEventListener('click', function () {

            // Coletar/mapeia os dados do formulário para atualizar no banco de dados
            var name = document.getElementById('employeeName').value;
            var birthdate = document.getElementById('employeeBirthdate').value;
            var email = document.getElementById('employeeEmail').value;
            var password = document.getElementById('employeePassword').value;
            var department = document.getElementById('employeeDepartment').value;
            var type = document.getElementById('employeeType').value;

            // Criar um objeto com os dados do formulário DEMONSTRATIVO/EXEMPLO
            /*var employeeData = {
                name: name,
                birthdate: birthdate,
                email: email,
                password: password,
                department: department,
                type: type
            };*/

            //====================================================================
            //(mais ou manos aqui que será chamado o metodo/função que adiciona o
            // novo funcionario no banco de dados)
            //====================================================================



            // Fechar o modal após salvar as alterações
            var modal = document.getElementById('editEmployeeModal');
            var modalInstance = bootstrap.Modal.getInstance(modal);
            modalInstance.hide();
        });
    </script>

</body>

</html>
